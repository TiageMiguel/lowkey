<div id="forgotpassword-modal" class="modal dark darken-3 scale-transition scale-in">
    <form id="forgotpassword-form">
        <div class='modal-content'>
            <div class='modal-header center'> <br>
                <h4 class='title center'>Recupere a sua conta!</h4>
                <span class="grey-text center">Recupere a sua conta hoje</span>
            </div>
        </div>
        <div class="row container white-text">
            <div class="col s12">
                <div class="row"> <br> <br>
                    <div class='input-field col s12'>
                        <input id='forgotpassword-name' name='forgotpassword-ianemail' type='text' class='white-text' maxlength='100' onkeyup="forgotPasswordCardinal()">
                        <label for='forgotpassword-name' class="white-label darken-3">Nome de Utilizador ou Email</label>
                        <span id='forgotpassword-name-info' class='helper-text red-text'></span>
                    </div>
                    <div class="input-field col s12">
                        <span class="helper-text grey-text center">
                            <i class="material-icons" style="vertical-align: middle">error_outline</i>
                            O Email de recuperação só é válido durante 30 minutos!
                        </span>
                    </div>
                </div>
            </div>
            <div class='col s12 row'>
                <div class="col s6">
                    <button type="reset" class="left btn-flat outline error rounded bold error-text">
                        <i class="material-icons left">close</i>
                        LIMPAR
                    </button>
                </div>
                <div class="col s6">
                    <button type="submit" id="forgotpassword-btn" class="btn-flat right center outline-primary rounded bold primary-text disabled">
                        <i class="material-icons-outlined left">restore</i>
                        RECUPERAR
                    </button>
                </div>
            </div>
        </div>
    </form>
    <section id='forgotpassword-success' class="hide">
        <div class="modal-content">
            <div class="container center">
                <h4 class="title"> Recupere a sua Conta!</h4>
                <span class="grey-text text-lighten-1">
                    Um email de recuperação de conta foi enviado para:
                </span>
                <br>
                <span id="forgotpassword-success-email" class="grey-text text-lighten-2"></span>
            </div>
        </div>
        <div class="center">
            <img class='responsive-img' src='/static/modules/images/modals/register/lowkey-register.png'>
        </div>
        <br><br>
    </section>
</div>